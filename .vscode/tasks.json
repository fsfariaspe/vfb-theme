{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Deploy to Server",
      "type": "shell",
      "command": "git",
      "args": ["add", ".", "&&", "git", "commit", "-m", "feat: ${input:commitMessage}", "&&", "git", "push", "origin", "main"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    }
  ],
  "inputs": [
    {
      "id": "commitMessage",
      "description": "Mensagem do commit",
      "default": "Atualização do tema",
      "type": "promptString"
    }
  ]
}